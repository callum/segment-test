{
  "name": "segment-test",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "build": "NODE_ENV=production browserify main.js | uglifyjs -cm > public/bundle.js",
    "start": "npm run watch & npm run www",
    "watch": "watchify main.js -o public/bundle.js -dv",
    "www": "ecstatic -p 8000 public"
  },
  "dependencies": {
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.0",
    "react-textarea-autosize": "^3.2.0",
    "redux": "^3.0.4"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "ecstatic": "^1.3.1",
    "uglify-js": "^2.6.1",
    "watchify": "^3.6.1"
  }
}
